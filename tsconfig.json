{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "jsx": "react",
    // "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": ".",
    // "skipLibCheck": true,
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "moduleResolution": "node",
    // "resolveJsonModule": true,
    // "isolatedModules": true,
    // "noEmit": true,
    "noImplicitReturns": true,
    // "downlevelIteration": true
    // "paths": {
    //   "*": ["client/src/components/common/*.d.ts"]
    // },
    // "typeRoots": ["node_modules/@types", "common"],
    "paths": {
      "App/*": ["client/src/components/App/*"],
      "CanvasRenderer/*": ["client/src/components/CanvasRenderer/*"],
      "Emulator/*": ["client/src/components/Emulator/*"],
      "GLRenderer/*": ["client/src/components/GLRenderer/*"],
      "Input/*": ["client/src/components/Input/*"],
      "Interrupts/*": ["client/src/components/Interrupts/*"],
      "Memory/*": ["client/src/components/Memory/*"],
      "PPU/*": ["client/src/components/PPU/*"],
      "helpers/*": ["client/src/helpers/*"],
      "CPU/*": ["client/src/components/CPU/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
